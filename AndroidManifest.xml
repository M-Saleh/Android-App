<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.navymail.ui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar" >
        
        <activity
            android:name="com.navymail.ui.Splash"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.navymail.ui.Login"
            android:screenOrientation="sensorPortrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.navymail.ui.ChangePass"
            android:screenOrientation="sensorPortrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.navymail.ui.Home"
            android:screenOrientation="sensorPortrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.navymail.ui.ShowTopicsActivity"
            android:screenOrientation="sensorPortrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.navymail.ui.TopicDetails"
            android:screenOrientation="sensorPortrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.navymail.ui.EditTopic"
            android:screenOrientation="sensorPortrait"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.navymail.ui.UnitSelection"
            android:screenOrientation="sensorPortrait"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>